<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Colour indentification heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Colour Identification:"

        />

    <!--Add 4 fixes buttons-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        />

        <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
            />

        <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
            />

        <Button
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
            />

    </LinearLayout>

<!--Distances from cones heading-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distances from cones:"
        android:layout_marginTop="70dp"

        />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    >
<!--Distance and Points headings-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background" >

        <!--Blank heading -->
        <TextView android:text=""
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1" />

        <!--Distance heading-->
        <TextView android:text="Distance"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_weight="1"/>

        <!--Points heading-->
        <TextView android:text="Points"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_weight="1"/>

    </TableRow>

<!--Near ball row-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Near ball"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>

        <TextView
            android:text="@string/near_ball_points"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />


    </TableRow>

<!--Far ball row-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Far ball"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>

        <TextView
            android:text="@string/near_ball_points"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

    </TableRow>

    <!--Robot home row-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="Robot home"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>

        <TextView
            android:text="@string/near_ball_points"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />


    </TableRow>

<!--Update button row (has 3 blank TextViews and one button-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


<!--Add 3 textview spaces in order to push button to RHS-->

        <TextView android:text=""
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView android:text=""
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView android:text=""
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

<!--Add the 'Update' button-->
        <Button
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="Update"
            android:layout_alignParentRight="true"
            />




    </TableRow>
</TableLayout>

</RelativeLayout>