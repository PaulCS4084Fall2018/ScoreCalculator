<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--Colour indentification heading -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Colour_identification"

        />

    <TextView
        android:id="@+id/col_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="@string/colour_points" />


    <!--Add 4 fixes buttons-->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <Button
        android:id="@+id/three_fixes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="@string/Three_fixes"
        />

        <Button
        android:id="@+id/two_fixes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="@string/Two_fixes"
            />

        <Button
        android:id="@+id/one_fix"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="@string/One_fix"
            />

        <Button
        android:id="@+id/zero_fixes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="@string/Zero_fixes"
            />

    </LinearLayout>

<!--Distances from cones heading-->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Distances from cones:"
        android:layout_marginTop="70dp"

        />

<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="100dp"
    >
<!--Distance and Points headings-->
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background" >

        <!--Blank heading -->
        <TextView android:text=""
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1" />

        <!--Distance heading-->
        <TextView android:text="Distance"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_weight="1"/>

        <!--Points heading-->
        <TextView android:text="Points"
         android:layout_height="wrap_content"
         android:layout_width="0dp"
         android:layout_weight="1"/>

    </TableRow>

<!--Near ball row-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/near_ball"
            android:text="Near ball"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/near_ball_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>

        <TextView
            android:id="@+id/near_ball_points"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="@string/near_ball_points"/>


    </TableRow>

<!--Far ball row-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/far_ball"
            android:text="Far ball"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/far_ball_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>

        <TextView
            android:id="@+id/far_ball_points"
            android:text="@string/far_ball_points"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />


    </TableRow>

    <!--Robot home row-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/robot_home"
            android:text="Robot home"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1"/>

        <EditText
            android:id="@+id/robot_home_distance"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:inputType="number"/>

        <TextView
            android:id="@+id/robot_home_points"
            android:text="@string/robot_home_points"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />


    </TableRow>

<!--Update button row (has 3 blank TextViews and one button-->
    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


<!--Add 3 textview spaces in order to push button to RHS-->

        <TextView
            android:text=""
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView android:text=""
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

        <TextView android:text=""
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:layout_weight="1" />

<!--Add the 'Update' button-->
        <Button
            android:id="@+id/update_Button"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:text="@string/update"

            />


    </TableRow>





    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/RelativeLayout01"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="@string/White_Black_mission"/>

        <TextView
            android:id="@+id/white_black_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="@string/Wb_points" />


    </RelativeLayout>



    <LinearLayout
        android:orientation="horizontal"
        android:layout_margin="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <Button
        android:id="@+id/wb_fail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="@string/wb_failure"

        />

    <Button
        android:id="@+id/wb_success"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="@string/wb_success"
        />

    </LinearLayout>


    <TextView
        android:id="@+id/message_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/total_score"
        android:gravity="center"
        android:textSize="20sp"
        />


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">


    <!--Add 3 textview spaces in order to push button to RHS-->

    <TextView android:text=""
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1" />

    <TextView android:text=""
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1" />

    <TextView android:text=""
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:layout_weight="1" />

    <!--Add the 'Reset' button-->
    <Button
        android:id="@+id/reset"
        android:layout_width="10dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="Reset"


        />
    </TableRow>

</TableLayout>

</RelativeLayout>